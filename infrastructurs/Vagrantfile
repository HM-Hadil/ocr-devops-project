# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  
  # Configuration globale
  config.vm.boot_timeout = 600  # Timeout de démarrage (10 minutes)
  
  # ══════════════════════════════════════════════════════════════
  # VM1: JENKINS MASTER
  # ══════════════════════════════════════════════════════════════
  config.vm.define "jenkins" do |jenkins|
    jenkins.vm.box = "ubuntu/jammy64"
    jenkins.vm.hostname = "jenkins-master"
    
    # Réseau
    jenkins.vm.network "private_network", ip: "192.168.56.10"
    jenkins.vm.network "forwarded_port", guest: 8080, host: 8080
    jenkins.vm.network "forwarded_port", guest: 50000, host: 50000
    
    # Configuration VirtualBox
    jenkins.vm.provider "virtualbox" do |vb|
      vb.name = "jenkins-master"
      vb.memory = "2048"
      vb.cpus = 2
      vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
    end
    
    # Provisioning
    jenkins.vm.provision "shell", path: "scripts/provision-jenkins-master.sh"
  end
  
  # ══════════════════════════════════════════════════════════════
  # VM2: AGENT
  # ══════════════════════════════════════════════════════════════
  config.vm.define "agent" do |agent|
    agent.vm.box = "ubuntu/jammy64"
    agent.vm.hostname = "jenkins-agent"
    
    # Réseau
    agent.vm.network "private_network", ip: "192.168.56.11"
    agent.vm.network "forwarded_port", guest: 3000, host: 3000
    agent.vm.network "forwarded_port", guest: 9090, host: 9090
    agent.vm.network "forwarded_port", guest: 5000, host: 5000
    agent.vm.network "forwarded_port", guest: 8081, host: 8081
    
    # Configuration VirtualBox
    agent.vm.provider "virtualbox" do |vb|
      vb.name = "jenkins-agent"
      vb.memory = "4096"
      vb.cpus = 2
      vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
    end
    
    # Provisioning
    agent.vm.provision "shell", path: "scripts/provision-agent.sh"
  end
  
end